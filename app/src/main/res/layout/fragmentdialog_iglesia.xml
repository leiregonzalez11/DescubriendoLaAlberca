                android:id="@+id/pilaagua2"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.67"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.783" />

            <Button
                android:id="@+id/torre"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.138"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
