<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mapsFragments.sitiosdeinteres.iglesia.iglesiaFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="-15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tituloiglesia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/alex_brush"
                android:text="Iglesia"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/moninfo3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:src="@drawable/ic_circle_info_solid"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.046"
                app:layout_constraintVertical_bias="0.89"
                app:tint="@color/black" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/iglesiamapa"
                android:layout_width="380dp"
                android:layout_height="500dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/planoiglesiapueblo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>

            <Button
                android:id="@+id/capillacentral"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.266" />

            <Button
                android:id="@+id/capilladolores"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.814"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.24" />

            <Button
                android:id="@+id/retablosantaana"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.371"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.393" />

            <Button
                android:id="@+id/retablovirgencarmen"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.681"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.391" />

            <Button
                android:id="@+id/retablomayor"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.114" />

            <Button
                android:id="@+id/pulpito"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.561" />

            <Button
