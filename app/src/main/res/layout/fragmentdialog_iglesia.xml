                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.302"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.899" />

            <Button
                android:id="@+id/portico1"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.748" />

            <Button
                android:id="@+id/portico2"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.748" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textplazaiglesia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="-5dp"
            android:fontFamily="@font/amiri"
            android:textAlignment="gravity"
            android:text="@string/infomaps"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonVolverIglesia"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="-5dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/amiri"
                android:text="@string/volver"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>