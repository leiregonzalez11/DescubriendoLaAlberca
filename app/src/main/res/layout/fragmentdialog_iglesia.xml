                app:layout_constraintVertical_bias="0.603" />

            <Button
                android:id="@+id/retablocristosudor"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.894"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
                app:layout_constraintVertical_bias="0.445" />

            <Button
                android:id="@+id/pilaagua1"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/iglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/iglesiamapa"
                app:layout_constraintHorizontal_bias="0.376"
                app:layout_constraintStart_toStartOf="@id/iglesiamapa"
                app:layout_constraintTop_toTopOf="@id/iglesiamapa"
