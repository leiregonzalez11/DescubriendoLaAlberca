<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".categorias.secundarias.tradiciones.marranoSanAnton">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulomarrano"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="25sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/black"
                android:fontFamily="casual"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textStyle="bold"
                tools:targetApi="o" />

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/marrano1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="casual"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/imgmarrano1"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/laalberca2"
                android:padding="15dp"
                tools:ignore="ContentDescription">
            </ImageView>

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/marrano2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="casual"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="19sp" />

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/marrano3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="casual"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/imgmarrano2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/laalberca2"
                android:padding="15dp"
                tools:ignore="ContentDescription">
            </ImageView>

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/marrano4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-20dp"
                android:fontFamily="casual"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/marranoAtras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/white"
                android:fontFamily="casual"
                android:src="@drawable/ic_circle_arrow_left_solid"
                app:tint="@color/black"
                android:text="@string/atras"
                android:importantForAccessibility="no">
            </ImageButton>

        </LinearLayout>

    </ScrollView>

</FrameLayout>