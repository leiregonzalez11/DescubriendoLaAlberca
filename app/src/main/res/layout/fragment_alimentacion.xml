<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".espacioDelViajero.alojamiento.Apartamento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/svAlim"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0"
            android:iconifiedByDefault="false"/>

        <ImageButton
            android:id="@+id/ordenarButtonC1"
            android:layout_width="25dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:layout_marginEnd="10dp"
            android:contentDescription="Ordenar por..."
            android:layout_weight="2"
            app:srcCompat="@drawable/sliders_solid__3_"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <ListView
        android:id="@+id/listviewAlimentacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="5dp"/>

</FrameLayout>