<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollviewCategorias"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:scrollbarSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:padding="13sp"
            tools:context=".categorias.categoriasActivity">

            <Button
                android:id="@+id/botonhistoria"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/historia"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/botonartesania"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="o" />

            <Button
                android:id="@+id/botonartesania"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="70dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/artesania"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botonhistoria"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="o" />

            <Button
                android:id="@+id/botontradiciones"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/tradiciones"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/botonarquitectura"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botonhistoria"
                tools:targetApi="o" />

            <Button
                android:id="@+id/botonarquitectura"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="70dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/arquitectura"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botontradiciones"
                app:layout_constraintTop_toBottomOf="@+id/botonartesania"
                tools:targetApi="o" />


            <Button
                android:id="@+id/botonmonumentos"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/monumentos"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/botonfiestas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botontradiciones"
                tools:targetApi="o" />

            <Button
                android:id="@+id/botonfiestas"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="70dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/fiestas"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botonmonumentos"
                app:layout_constraintTop_toBottomOf="@+id/botonarquitectura"
                tools:targetApi="o" />

            <Button
                android:id="@+id/botongastronomia"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/gastronomia"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/botonalojamientos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botonmonumentos"
                tools:targetApi="o" />

            <Button
                android:id="@+id/botonalojamientos"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="70dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/alojamiento"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botongastronomia"
                app:layout_constraintTop_toBottomOf="@+id/botonfiestas"
                tools:targetApi="o" />

            <Button
                android:id="@+id/botonruta"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/rutas"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/botonotros"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botonalojamientos"
                tools:targetApi="o" />

            <Button
                android:id="@+id/botonotros"
                android:layout_width="162dp"
                android:layout_height="106dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="70dp"
                android:autoSizeMaxTextSize="13.5dp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:text="@string/otros"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botonruta"
                app:layout_constraintTop_toBottomOf="@+id/botonalojamientos"
                tools:targetApi="o" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationViewCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemIconSize="65dip"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>