<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollviewCategorias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="10dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:context=".categoriasActivity">

            <Button
                android:id="@+id/botontradiciones"
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="Tradiciones"
                app:layout_constraintEnd_toStartOf="@+id/botonarquitectura"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/botonarquitectura"
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="60dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="Arquitectura"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botontradiciones"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/botonmonumentos"
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="Monumentos"
                app:layout_constraintEnd_toStartOf="@+id/botongastronomia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botontradiciones"
                app:layout_constraintVertical_bias="0.008" />

            <Button
                android:id="@+id/botongastronomia"
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="60dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="Gastronomia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botonmonumentos"
                app:layout_constraintTop_toBottomOf="@+id/botonarquitectura" />

            <Button
                android:id="@+id/botonalojamientos"
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="Alojamiento"
                app:layout_constraintEnd_toStartOf="@+id/botonarte"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botonmonumentos"
                app:layout_constraintVertical_bias="0.008" />

            <Button
                android:id="@+id/botonarte"
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="60dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="Arte"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botonalojamientos"
                app:layout_constraintTop_toBottomOf="@+id/botongastronomia" />



            <Button
                android:id="@+id/botonruta"
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="Rutas"
                app:layout_constraintEnd_toStartOf="@+id/botonotros"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botonalojamientos"
                app:layout_constraintVertical_bias="0.008" />

            <Button
                android:id="@+id/botonotros"
                android:layout_width="146dp"
                android:layout_height="128dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="60dp"
                android:autoSizeMaxTextSize="13sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="Otros"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/botonruta"
                app:layout_constraintTop_toBottomOf="@+id/botonarte" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationViewCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemIconSize="65dip"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>