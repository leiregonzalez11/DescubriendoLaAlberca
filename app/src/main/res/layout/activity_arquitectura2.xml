<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:scrollbarSize="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-75dp">

        <LinearLayout
            android:id="@+id/layoutArqui21"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/fab_margin"
            android:gravity="center"
            android:orientation="vertical"
            tools:context=".categorias.arquitectura.arquitecturaActivity2">

            <TextView
                android:id="@+id/arquitext"
                android:layout_width="323dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:autoSizeMaxTextSize="45sp"
                android:autoSizeMinTextSize="23sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alata"
                android:gravity="center"
                android:text="@string/la_casa_albercana"
                android:textAlignment="gravity"
                android:textStyle="bold"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/exttext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/alatsi"
                android:gravity="left"
                android:text="@string/_1_aspecto_exterior"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/arqui21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:fontFamily="@font/alata"
                android:gravity='center'
                android:textSize="17sp"/>

            <ImageView
                android:id="@+id/arqui21img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-180dp"
                android:layout_marginBottom="-200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </ImageView>

            <TextView
                android:id="@+id/arqui22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/alata"
                android:gravity='center'
                android:textSize="17sp"/>

            <ImageView
                android:id="@+id/arqui22img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-180dp"
                android:layout_marginBottom="-190dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </ImageView>

            <TextView
                android:id="@+id/arqui23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/alata"
                android:gravity='center'
                android:textSize="17sp"/>

            <ImageView
                android:id="@+id/arqui23img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-180dp"
                android:layout_marginBottom="-180dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
            </ImageView>

            <LinearLayout
                android:id="@+id/layoutArqui22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/fab_margin"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/arquiatras2"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/alatsi"
                    android:text="@string/atras">

                </Button>

                <Button
                    android:id="@+id/arquisiguiente2"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="@string/siguiente"
                    android:fontFamily="@font/alatsi"
                    android:layout_gravity="center">

                </Button>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationViewArqui2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="65dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>