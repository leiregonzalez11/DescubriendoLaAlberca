<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ajustes.idiomasActivity">

    <ScrollView
        android:id="@+id/scrollviewAjustes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:scrollbarSize="8dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-35dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_margin="15dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="15dp">

                <LinearLayout
                    android:id="@+id/layoutArte1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textoajustes"
                        android:layout_width="323dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:textSize="25dp"
                        android:fontFamily="@font/alatsi"
                        android:gravity="left"
                        android:text="@string/seleccione_un_idioma"
                        android:textAlignment="gravity"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlHardcoded"
                        tools:targetApi="o" />

                    <RadioGroup
                        android:id="@+id/opciones_idiomas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="start"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textoajustes">

                        <!--
                        <RadioButton
                            android:id="@+id/radio_aleman"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="16dp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alatsi"
                            android:text="@string/aleman"
                            tools:targetApi="o" />

                            -->

                        <RadioButton
                            android:id="@+id/radio_castellano"
                            android:layout_width="186dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="16dp"
                            android:textSize="23dp"
                            android:fontFamily="@font/alata"
                            android:text="@string/castellano"
                            tools:targetApi="o" />

                        <!--

                        <RadioButton
                            android:id="@+id/radio_catalan"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="16dp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alatsi"
                            android:text="@string/catalan"
                            tools:targetApi="o" />

                            -->

                        <RadioButton
                            android:id="@+id/radio_euskera"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="16dp"
                            android:textSize="23dp"
                            android:fontFamily="@font/alata"
                            android:text="@string/euskera"
                            tools:targetApi="o" />

                        <!--
                        <RadioButton
                            android:id="@+id/radio_frances"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="16dp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alatsi"
                            android:text="@string/frances"
                            tools:targetApi="o" />

                        <RadioButton
                            android:id="@+id/radio_gallego"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="16dp"
                            android:autoSizeMaxTextSize="25sp"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/alatsi"
                            android:text="@string/gallego"
                            tools:targetApi="o" /> -->

                        <RadioButton
                            android:id="@+id/radio_ingles"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="16dp"
                            android:textSize="23dp"
                            android:fontFamily="@font/alata"
                            android:text="@string/ingles"
                            app:layout_constraintEnd_toStartOf="@+id/radio_castellano"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:targetApi="o" />

                    </RadioGroup>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationViewAjustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemIconSize="65dip"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>