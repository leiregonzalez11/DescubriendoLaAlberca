<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".categorias.secundarias.cultura.medios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="15dp"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="323dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/la_alberca_en_los_medios"
            android:textAlignment="gravity"
            android:textStyle="bold"
            tools:targetApi="o"
            tools:ignore="HardcodedText" />

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:fontFamily="casual"
            android:text="@string/textmedios1"
            android:textColor="@color/black"
            android:gravity='center_horizontal'
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imgmedios1"
            android:layout_width="300dp"
            android:layout_height="190dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/laalberca2"
            android:contentDescription="Foto receta"
            tools:ignore="HardcodedText">
        </ImageView>

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="10dp"
            android:fontFamily="casual"
            android:text="@string/textmedios2"
            android:textColor="@color/black"
            android:gravity='center_horizontal'
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imgmedios2"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/laalberca2"
            android:contentDescription="Foto receta"
            tools:ignore="HardcodedText">
        </ImageView>

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:fontFamily="casual"
            android:text="@string/textmedios3"
            android:textColor="@color/black"
            android:gravity='center_horizontal'
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imgmedios3"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/laalberca2"
            android:contentDescription="Foto receta"
            tools:ignore="HardcodedText">
        </ImageView>


    </LinearLayout>

</ScrollView>