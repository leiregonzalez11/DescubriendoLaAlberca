<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="8dp"
    android:scrollbars="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".categorias.secundarias.fiestas.diagosto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulodia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:text="@string/diagosto"
            android:focusable="true"
            android:textColor="@color/black"
            android:fontFamily="casual"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textStyle="bold"
            tools:targetApi="o" />

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:id="@+id/dia1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="casual"
            android:gravity='center'
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgDia1"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/laalberca2"
            android:padding="15dp"
            tools:ignore="ContentDescription">
        </ImageView>

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:id="@+id/dia2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="-5dp"
            android:fontFamily="casual"
            android:gravity='center'
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgDia2"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/laalberca2"
            android:padding="15dp"
            tools:ignore="ContentDescription">
        </ImageView>

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:id="@+id/dia3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="-20dp"
            android:fontFamily="casual"
            android:gravity='center'
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:id="@+id/dia4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-10dp"
            android:fontFamily="casual"
            android:gravity='center'
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <VideoView
                android:id="@+id/videoDia"
                android:layout_width="180dp"
                android:layout_height="130dp"/>

            <ImageButton
                android:id="@+id/playDia"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:background="@color/white"
                android:src="@drawable/play"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/pauseDia"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:src="@drawable/pause"
                tools:ignore="ContentDescription">
            </ImageButton>

            <ImageButton
                android:id="@+id/stopDia"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:src="@drawable/stop"
                tools:ignore="ContentDescription">
            </ImageButton>

        </LinearLayout>

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:id="@+id/dia5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-20dp"
            android:fontFamily="casual"
            android:gravity='center'
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/diaAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/white"
            android:src="@drawable/ic_circle_arrow_left_solid"
            app:tint="@color/black"
            android:fontFamily="casual"
            android:text="@string/volver"
            android:importantForAccessibility="no">
        </ImageButton>

    </LinearLayout>

</ScrollView>