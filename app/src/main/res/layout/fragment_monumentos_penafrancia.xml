<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EspacioDelViajero.Maps.otrosLugares.penaFrancia.monumentosPenaFrancia">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutArte1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/monumentospena"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/quevisitar"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="o" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="350dp"
                android:layout_height="650dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/planopenadefrancia"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/monumentospena">

            </ImageView>

            <Button
                android:id="@+id/santodomingo"
                android:layout_width="141dp"
                android:layout_height="62dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="167dp"
                android:layout_marginBottom="568dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/miradorsantodomingo"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintStart_toStartOf="@id/imageView2" />

            <Button
                android:id="@+id/santocristoexterior"
                android:layout_width="153dp"
                android:layout_height="45dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="64dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:text="@string/santocristo"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintHorizontal_bias="0.417"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintVertical_bias="0.975" />

            <Button
                android:id="@+id/sanandresexterior"
                android:layout_width="141dp"
                android:layout_height="57dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="00dp"
                android:layout_marginBottom="124dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:text="@string/sanandres"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintHorizontal_bias="0.925"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintVertical_bias="0.963" />

            <Button
                android:id="@+id/santuario"
                android:layout_width="163dp"
                android:layout_height="37dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="180dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:text="@string/santuario"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintVertical_bias="0.981" />

            <Button
                android:id="@+id/lablanca"
                android:layout_width="202dp"
                android:layout_height="22dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="50dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginBottom="516dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:text="@string/capillablanca"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintVertical_bias="0.919" />

            <Button
                android:id="@+id/rollo"
                android:layout_width="107dp"
                android:layout_height="37dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="392dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:text="@string/rollo"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintHorizontal_bias="0.802"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintVertical_bias="0.946" />

            <Button
                android:id="@+id/hospederia"
                android:layout_width="108dp"
                android:layout_height="37dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="416dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:text="@string/hospederia"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintVertical_bias="0.969" />

            <Button
                android:id="@+id/balcon"
                android:layout_width="110dp"
                android:layout_height="51dp"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="456dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:text="@string/balconsantiago"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/imageView2"
                app:layout_constraintEnd_toEndOf="@id/imageView2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/imageView2"
                app:layout_constraintVertical_bias="0.923" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>