                        </ImageView>

                        <TextView
                            android:id="@+id/puntrest"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata"
                            android:gravity='left'
                            android:text="@string/puntuacion"
