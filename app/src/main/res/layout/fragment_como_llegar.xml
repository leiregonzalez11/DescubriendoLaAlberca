<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ajustesFragments.comoLlegarFragment">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/layoutHist1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:context=".ajustes.comoLlegarActivity">

            <TextView
                android:id="@+id/ajustestext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/alatsi"
                android:gravity="center"
                android:text="@string/comoLlegar2"
                android:textColor="@color/black"
                android:textAlignment="gravity"
                android:textSize="27sp"
                android:textStyle="bold"
                tools:targetApi="o" />

            <com.example.tfg.adapters.JustifyTextView
                android:id="@+id/comollegartextintro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-15dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/black"
                android:text="@string/introComoLlegar"
                android:gravity='center'
                android:textSize="16sp"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:layout_margin="15dp"
                app:cardElevation="15dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="left"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/comollegar1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/car"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/encoche"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/alata"
                            android:gravity='left'
                            android:text="@string/en_coche"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.example.tfg.adapters.JustifyTextView
                        android:id="@+id/comollegartext1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="-20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/black"
                        android:text="@string/comoLlegarCoche"
                        android:gravity='center'
                        android:textSize="16sp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="left"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/comollegar2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/bus"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/enbus"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/alata"
                            android:gravity='left'
                            android:text="@string/en_bus"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.example.tfg.adapters.JustifyTextView
                        android:id="@+id/comollegartext2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="-13dp"
                        android:fontFamily="@font/alata"
                        android:textColor="@color/black"
                        android:text="@string/comoLlegarBus"
                        android:gravity='center'
                        android:textSize="16sp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="15dp"
                        app:cardElevation="10dp"
                        app:strokeColor="@color/black"
                        app:cardCornerRadius="15dp">

                        <Spinner
                            android:id="@+id/spinnerBus"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:backgroundTint="@color/black" >

                        </Spinner>

                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/comollegar3"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_margin="15dp"
                        android:layout_marginTop="-20dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>