<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".categorias.secundarias.arquitectura.aspectoExterior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="323dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/la_casa_albercana"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="-10dp"
                android:orientation="horizontal"
                android:layout_marginStart="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="casual"
                    android:gravity="start"
                    android:text="@string/_1_aspecto_exterior"
                    tools:targetApi="o"
                    tools:ignore="RtlHardcoded" />

                <ImageButton
                    android:id="@+id/arquiAtras2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:background="@color/white"
                    android:layout_marginStart="75dp"
                    android:textStyle="bold"
                    android:src="@drawable/ic_circle_arrow_left_solid"
                    app:tint="@color/black"
                    android:importantForAccessibility="no">
                </ImageButton>

                <ImageButton
                    android:id="@+id/arquisiguiente2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:layout_marginStart="-10dp"
                    android:src="@drawable/ic_circle_arrow_right_solid"
                    app:tint="@color/black"
                    android:importantForAccessibility="no">
                </ImageButton>

            </LinearLayout>

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/arqui21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="casual"
                android:textColor="@color/black"
                android:gravity='center'
                android:textSize="19sp"/>

            <ImageView
                android:id="@+id/arqui21img"
                android:layout_width="320dp"
                android:layout_height="430dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                tools:ignore="ContentDescription">
            </ImageView>

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/arqui22"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:fontFamily="casual"
                android:textColor="@color/black"
                android:gravity='center'
                android:textSize="19sp"/>

            <ImageView
                android:id="@+id/arqui22img"
                android:layout_width="300dp"
                android:layout_height="330dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                tools:ignore="ContentDescription">
            </ImageView>

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/arqui23"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-10dp"
                android:fontFamily="casual"
                android:textColor="@color/black"
                android:gravity='center'
                android:textSize="19sp"/>

            <ImageView
                android:id="@+id/arqui23img"
                android:layout_width="300dp"
                android:layout_height="270dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                tools:ignore="ContentDescription">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/arquiAtras22"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@color/white"
                    android:src="@drawable/ic_circle_arrow_left_solid"
                    app:tint="@color/black"
                    android:importantForAccessibility="no">
                </ImageButton>

                <ImageButton
                    android:id="@+id/arquisiguiente22"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_circle_arrow_right_solid"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription">
                </ImageButton>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>