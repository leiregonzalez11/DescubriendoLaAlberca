<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categorias.principal.tradicionesInicio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/tradicionesmayus"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/trad11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/trad12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="-10dp"
                android:fontFamily="casual"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!--Botones-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <!--LINEA BOTONES TRADICIONES 1-->
                <!--marrano y loa-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btntrad2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/marrano"
                        android:fontFamily="casual"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:background="@drawable/borde_redondeado"
                        style="?android:attr/buttonBarButtonStyle" />

                    <Button
                        android:id="@+id/btntrad3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/la_loa"
                        android:fontFamily="casual"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:background="@drawable/borde_redondeado"
                        style="?android:attr/buttonBarButtonStyle" />


                </LinearLayout>

                <!--LINEA BOTONES TRADICIONES 2-->
                <!--moza de ánimas y pendón-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btntrad1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/la_moza_de_animas"
                        android:fontFamily="casual"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:background="@drawable/borde_redondeado"
                        style="?android:attr/buttonBarButtonStyle"/>

                    <Button
                        android:id="@+id/btntrad4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/alboradas"
                        android:fontFamily="casual"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:background="@drawable/borde_redondeado"
                        style="?android:attr/buttonBarButtonStyle" />


                </LinearLayout>

                <!--LINEA BOTONES TRADICIONES 3-->
                <!--alboradas y boda albercana-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btntrad5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginStart="3dp"
                        android:text="@string/el_pendon"
                        android:fontFamily="casual"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:background="@drawable/borde_redondeado"
                        style="?android:attr/buttonBarButtonStyle"/>

                    <Button
                        android:id="@+id/btntrad6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/la_boda_albercana"
                        android:fontFamily="casual"
                        android:layout_marginStart="3dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:background="@drawable/borde_redondeado"
                        style="?android:attr/buttonBarButtonStyle" />

                </LinearLayout>

                <!--LINEA BOTONES TRADICIONES 4-->
                <!--fuentes de La Alberca-->
                <Button
                    android:id="@+id/btntrad7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/las_fuentes_de_la_alberca"
                    android:fontFamily="casual"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:background="@drawable/borde_redondeado"
                    style="?android:attr/buttonBarButtonStyle"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>