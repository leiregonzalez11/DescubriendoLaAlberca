<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".categorias.secundarias.artesania.trajeserranoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:gravity="center"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/sel_options"
            android:gravity="center"/>


        <Button
            android:id="@+id/btnmasc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/traje_hombre"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#000000"
            android:background="@drawable/borde_redondeado"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnfem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/traje_mujer"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#000000"
            android:background="@drawable/borde_redondeado"
            style="?android:attr/buttonBarButtonStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonvolvertrajes"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:background="#00FFFFFF"
                android:fontFamily="casual"
                android:text="@string/volver"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>