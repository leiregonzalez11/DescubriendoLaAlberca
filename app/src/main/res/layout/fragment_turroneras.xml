<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categorias.secundarias.gastronomia.turroneras">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:scrollbars="vertical"
            android:scrollbarSize="8dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/gastrotext"
                android:layout_width="323dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="30sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/black"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/turroneras"
                android:textAlignment="gravity"
                android:textStyle="bold"
                tools:targetApi="o" />

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/gastro31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-10dp"
                android:fontFamily="casual"
                android:textColor="@color/black"
                android:gravity='center_horizontal'
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/gastro31img"
                android:layout_width="wrap_content"
                android:layout_margin="12dp"
                android:layout_height="250dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                tools:ignore="ContentDescription">
            </ImageView>

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/gastro32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-15dp"
                android:fontFamily="casual"
                android:textColor="@color/black"
                android:gravity='center_horizontal'
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/gastro32img"
                android:layout_width="340dp"
                android:layout_margin="11dp"
                android:layout_height="250dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                tools:ignore="ContentDescription">
            </ImageView>

            <com.example.tfg.otherFiles.adapters.JustifyTextView
                android:id="@+id/gastro33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="casual"
                android:textColor="@color/black"
                android:gravity='center_horizontal'
                android:textSize="18sp"/>

            <Button
                android:id="@+id/gastroAtras3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/borde_redondeado"
                android:fontFamily="casual"
                android:text="@string/arriba">
            </Button>

        </LinearLayout>

    </ScrollView>

</FrameLayout>