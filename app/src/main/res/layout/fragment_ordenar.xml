<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dialogFragments.ordenarFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="-4dp"
        android:fontFamily="@font/amiri"
        android:hint="Ordenar por..."
        android:textAlignment="gravity"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/opciones_idiomas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoajustes">

            <RadioButton
                android:id="@+id/radio_atoz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:checked="false"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/amiri"
                android:text="Orden alfabético" />

            <RadioButton
                android:id="@+id/radio_ztoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:checked="false"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/amiri"
                android:text="Orden alfabético inverso" />

            <RadioButton
                android:id="@+id/radio_asc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:textSize="22sp"
                android:checked="false"
                android:textStyle="bold"
                android:fontFamily="@font/amiri"
                android:text="Popularidad ascendente"/>

            <RadioButton
                android:id="@+id/radio_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="16dp"
                android:textSize="22sp"
                android:visibility="gone"
                android:checked="false"
                android:textStyle="bold"
                android:fontFamily="@font/amiri"
                android:text="Popularidad descendente" />

        </RadioGroup>

    </LinearLayout>

</FrameLayout>