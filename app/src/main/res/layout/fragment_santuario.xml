<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".categoriasFragments.secundarias.otrosLugares.penaFrancia.santuario">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutArte1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".anterior.categorias.gastronomia.gastronomiaActivity">

        <TextView
            android:id="@+id/santinicio"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/alex_brush"
            android:gravity="center"
            android:text="El Santuario"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/santuariotext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="o" />

        <com.example.tfg.adapters.JustifyTextView
            android:id="@+id/santuariotext"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/amiri"
            android:gravity='center'
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/santinicio" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-45dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/planosantuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/santuariotext">

        </ImageView>

        <Button
            android:id="@+id/convento"
            android:layout_width="141dp"
            android:layout_height="62dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/aref_ruqaa"
            android:text="El Convento"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imageView2"
            app:layout_constraintEnd_toEndOf="@id/imageView2"
            app:layout_constraintHorizontal_bias="0.604"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="@id/imageView2"
            app:layout_constraintVertical_bias="0.927" />

        <Button
            android:id="@+id/iglesiapeÃ±a"
            android:layout_width="153dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="64dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/aref_ruqaa"
            android:text="La Iglesia"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imageView2"
            app:layout_constraintEnd_toEndOf="@id/imageView2"
            app:layout_constraintHorizontal_bias="0.187"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="@id/imageView2"
            app:layout_constraintVertical_bias="0.073" />

        <Button
            android:id="@+id/pozoverde"
            android:layout_width="162dp"
            android:layout_height="52dp"
            android:layout_marginStart="45dp"
            android:background="#00FFFFFF"
            android:fontFamily="@font/aref_ruqaa"
            android:text="El pozo verde"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imageView2"
            app:layout_constraintEnd_toEndOf="@id/imageView2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="@id/imageView2"
            app:layout_constraintVertical_bias="0.195" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>