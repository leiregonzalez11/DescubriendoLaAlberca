<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".espacioDelViajero.DondeComer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/ajustes3"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:targetApi="o" />

        <com.example.tfg.otherFiles.adapters.JustifyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="@string/donde_comer_intro"
            android:fontFamily="casual"
            android:gravity="center"
            android:textAlignment="gravity"
            tools:targetApi="o" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="25dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardElevation="10dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layoutComer"
                app:tabIndicatorColor="#880E4F"
                app:tabTextColor="@color/black"
                app:tabSelectedTextColor="#880E4F"
                app:tabTextAppearance="@style/tab_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerComer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="-20dp"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>