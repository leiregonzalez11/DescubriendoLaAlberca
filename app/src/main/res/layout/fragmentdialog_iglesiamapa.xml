<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mapsFragments.sitiosdeinteres.iglesiamapaFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tituloiglesia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="-15dp"
            android:fontFamily="@font/alex_brush"
            android:textAlignment="gravity"
            android:text="Plaza de la Iglesia"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="35sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/plazaiglesiamapa"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:src="@drawable/plazaiglesia"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>

            <Button
                android:id="@+id/buttonHornacina"
                android:layout_width="45dp"
                android:layout_height="38dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/plazaiglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/plazaiglesiamapa"
                app:layout_constraintHorizontal_bias="0.627"
                app:layout_constraintStart_toStartOf="@id/plazaiglesiamapa"
                app:layout_constraintTop_toTopOf="@id/plazaiglesiamapa"
                app:layout_constraintVertical_bias="0.351" />

            <Button
                android:id="@+id/buttonIglesia"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/plazaiglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/plazaiglesiamapa"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toStartOf="@id/plazaiglesiamapa"
                app:layout_constraintTop_toTopOf="@id/plazaiglesiamapa"
                app:layout_constraintVertical_bias="0.603" />

            <Button
                android:id="@+id/buttonMarrano"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/plazaiglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/plazaiglesiamapa"
                app:layout_constraintHorizontal_bias="0.208"
                app:layout_constraintStart_toStartOf="@id/plazaiglesiamapa"
                app:layout_constraintTop_toTopOf="@id/plazaiglesiamapa"
                app:layout_constraintVertical_bias="0.502" />

            <Button
                android:id="@+id/buttonCasaSS"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:background="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="@id/plazaiglesiamapa"
                app:layout_constraintEnd_toEndOf="@id/plazaiglesiamapa"
                app:layout_constraintHorizontal_bias="0.16"
                app:layout_constraintStart_toStartOf="@id/plazaiglesiamapa"
                app:layout_constraintTop_toTopOf="@id/plazaiglesiamapa"
                app:layout_constraintVertical_bias="0.798" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textplazaiglesia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="-5dp"
            android:fontFamily="@font/amiri"
            android:textAlignment="gravity"
            android:text="@string/infomaps"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonVolverPlazaIglesia"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="-5dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/amiri"
                android:text="@string/volver"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>