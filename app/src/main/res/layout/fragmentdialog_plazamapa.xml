<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mapsFragments.sitiosdeinteres.plaza.plazamapaFragment">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="-15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tituloplaza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alex_brush"
                    android:text="Plaza Mayor"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.example.tfg.adapters.JustifyTextView
                android:id="@+id/plaza1text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="-30dp"
                android:fontFamily="@font/amiri"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/plazafoto1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/laalberca2"
                tools:ignore="ContentDescription" />

            <com.example.tfg.adapters.JustifyTextView
                android:id="@+id/plaza2text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="-30dp"
                android:fontFamily="@font/amiri"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/plazafoto2"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/laalberca2"
                tools:ignore="ContentDescription" />

            <com.example.tfg.adapters.JustifyTextView
                android:id="@+id/plaza3text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="-30dp"
                android:fontFamily="@font/amiri"
                android:gravity='center'
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plaza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alex_brush"
                    android:text="Mapa de la plaza"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/moninfo2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:src="@drawable/ic_circle_info_solid"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.046"
                    app:layout_constraintVertical_bias="0.89"
                    app:tint="@color/black"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/plazamapa"
                    android:layout_width="270dp"
                    android:layout_height="220dp"
                    android:background="@color/black"
                    android:padding="3dp"
                    android:src="@drawable/plazalaalberca"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/buttonAyuntamiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/uno"
                    app:layout_constraintBottom_toBottomOf="@id/plazamapa"
                    app:layout_constraintEnd_toEndOf="@id/plazamapa"
                    app:layout_constraintHorizontal_bias="0.544"
                    app:layout_constraintStart_toStartOf="@id/plazamapa"
                    app:layout_constraintTop_toTopOf="@id/plazamapa"
                    app:layout_constraintVertical_bias="0.151"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/buttonCrucero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/dos"
                    app:layout_constraintBottom_toBottomOf="@id/plazamapa"
                    app:layout_constraintEnd_toEndOf="@id/plazamapa"
                    app:layout_constraintHorizontal_bias="0.382"
                    app:layout_constraintStart_toStartOf="@id/plazamapa"
                    app:layout_constraintTop_toTopOf="@id/plazamapa"
                    app:layout_constraintVertical_bias="0.574"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/buttonEscuelas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/tres"
                    app:layout_constraintBottom_toBottomOf="@id/plazamapa"
                    app:layout_constraintEnd_toEndOf="@id/plazamapa"
                    app:layout_constraintHorizontal_bias="0.164"
                    app:layout_constraintStart_toStartOf="@id/plazamapa"
                    app:layout_constraintTop_toTopOf="@id/plazamapa"
                    app:layout_constraintVertical_bias="0.502"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/buttonTeatro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/cuatroi"
                    app:layout_constraintBottom_toBottomOf="@id/plazamapa"
                    app:layout_constraintEnd_toEndOf="@id/plazamapa"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="@id/plazamapa"
                    app:layout_constraintTop_toTopOf="@id/plazamapa"
                    app:layout_constraintVertical_bias="0.869"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/buttonBiblioteca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/seisi"
                    app:layout_constraintBottom_toBottomOf="@id/plazamapa"
                    app:layout_constraintEnd_toEndOf="@id/plazamapa"
                    app:layout_constraintHorizontal_bias="0.883"
                    app:layout_constraintStart_toStartOf="@id/plazamapa"
                    app:layout_constraintTop_toTopOf="@id/plazamapa"
                    app:layout_constraintVertical_bias="0.869"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/buttonUnamuno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:src="@drawable/cinco"
                    app:layout_constraintBottom_toBottomOf="@id/plazamapa"
                    app:layout_constraintEnd_toEndOf="@id/plazamapa"
                    app:layout_constraintHorizontal_bias="0.871"
                    app:layout_constraintStart_toStartOf="@id/plazamapa"
                    app:layout_constraintTop_toTopOf="@id/plazamapa"
                    app:layout_constraintVertical_bias="0.659"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textplazaiglesia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-25dp"
                android:layout_marginBottom="-5dp"
                android:fontFamily="@font/amiri"
                android:text="@string/infomaps"
                android:textAlignment="gravity"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:gravity="right"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonVolverPlaza"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="-5dp"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/amiri"
                    android:text="@string/volver"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>