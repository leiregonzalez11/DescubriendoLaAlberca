
//TABLA TRADICIONES
CREATE TABLE IF NOT EXISTS tradicion (idTrad INTEGER NOT NULL PRIMARY KEY AutoIncrement,
                                      nombreTrad VARCHAR(30) NOT NULL,
                                      descrTrad VARCHAR NOT NULL);

//TABLA MONUMENTOS
CREATE TABLE IF NOT EXISTS monumento (idMon INTEGER NOT NULL PRIMARY KEY AutoIncrement,
                                      nombreMon VARCHAR NOT NULL,
                                      descMon VARCHAR NOT NULL,
                                      ubiMon VARCHAR NOT NULL,
                                      latMon VARCHAR NOT NULL,
                                      longMon VARCHAR NOT NULL);

//TABLA FIESTAS
CREATE TABLE IF NOT EXISTS fiesta (idFie INTEGER NOT NULL PRIMARY KEY AutoIncrement,
                                   nombreFie VARCHAR(30) NOT NULL,
                                   descrFie VARCHAR NOT NULL);

//TABLA ALOJAMIENTO
CREATE TABLE IF NOT EXISTS alojamiento (idAloj INTEGER NOT NULL PRIMARY KEY AutoIncrement,
                                        nombreAloj VARCHAR NOT NULL,
                                        descAloj VARCHAR NOT NULL,
                                        telAloj int (9),
                                        ubiAloj VARCHAR NOT NULL,
                                        latAloj VARCHAR NOT NULL,
                                        longAloj VARCHAR NOT NULL);

//GASTRONOMIA

//Tabla 1: platos tradicionales

CREATE TABLE IF NOT EXISTS plato (idPlato INTEGER NOT NULL PRIMARY KEY AutoIncrement,
                                  nombrePlato VARCHAR NOT NULL,
                                  descPlato VARCHAR NOT NULL);

//Tabla 2: bares y restaurantes

CREATE TABLE IF NOT EXISTS restaurantes (idRest INTEGER NOT NULL PRIMARY KEY AutoIncrement,
                                         nombreRest VARCHAR NOT NULL,
                                         descRest VARCHAR NOT NULL
                                         telRest int (9),
                                         ubiRest VARCHAR NOT NULL,
                                         latRest VARCHAR NOT NULL,
                                         longRest VARCHAR NOT NULL);

//TABLA RUTAS

CREATE TABLE IF NOT EXISTS rutas (idRuta INTEGER NOT NULL PRIMARY KEY AutoIncrement,
                                  nombreRuta VARCHAR NOT NULL,
                                  descRuta VARCHAR NOT NULL);

//TABLA OTROS

