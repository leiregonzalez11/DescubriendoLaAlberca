INSERT INTO monumento (categoriaMon, nombreMon, idioma, descMon) VALUES ('plaza', 'plaza', 'es', 'La plaza de La Alberca es el punto más turístico del pueblo. Se trata del centro de la vida social y el escenario de numerosas tradiciones, además de haber sido testigo de grandes acontecimientos históricos y ser centro de recepción de grandes personalidades de distintos ámbitos de la sociedad: desde pintores de la talla de Sorolla o Ismael Blat, hasta personalidades tán importantes como Miguel de Unamuno o el rey Alfonso XIII, pasando por deportistas como Vicente del Bosque o Iker Casillas o actores y actrices de la talla de Concha Velasco y Alfredo Landa.');
