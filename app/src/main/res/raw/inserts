INSERT INTO monumento (categoriaMon, nombreMon, idioma, descMon) VALUES ('plaza', 'biblioteca', 'es', 'En el siglo XV, y gracias al hallazgo de la Virgen de la Peña de Francia, La Alberca se convirtió en lugar de peregrinación para aquellos que hacían el camino de Santiago. Debido a ésto, el pueblo construyó un pequeño hospital con 12 camas que servía como albergue de peregrinos para que éstos pudiesen pasar la noche.');
