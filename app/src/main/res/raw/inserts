INSERT INTO tradiciones (nombreTrad, idioma, descr) VALUES ('elpendón','es', 'A día de hoy, el pendón original se conserva en el archivo parroquial del pueblo, y se dice que el pendón aún conserva sangre de la batalla que la tradición atribuye a que las mujeres cortaron los testículos a algunos soldados de las tropas portuguesas.');
